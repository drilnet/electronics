// ---
// | Показать окно.
// | Pop-Up.
// ---
function OpenPopUpWindow(id)
{
	var myWin = document.getElementById(id); // Находим наше "окно".
	myWin.style.display = "block"; // "Включаем" его.
}

// ---
// | Закрыть окно.
// | Pop-Up.
// ---
function ClosePopUpWindow(id)
{
	var myWin = document.getElementById(id); // Находим наше "окно".
	myWin.style.display = "none"; // "Выключаем" окно.
}
